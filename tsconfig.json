{
	"compilerOptions": {
		"module": "Node18",
		"moduleResolution": "nodenext",
		"noImplicitAny": true,
		"paths": {
			"@lib": ["./src/lib/index"],
			"@controllers/*": ["./src/controllers/*"],
			"@schemas/*": ["./src/schemas/*"],
			"@services/*": ["./src/services/*"]
		},
		"typeRoots": ["./env.d.ts", "./node_modules/@types"]
	},
	"include": ["src/**/*"],
}
