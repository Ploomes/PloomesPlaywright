{
	"compilerOptions": {
		"module": "Node18",
		"moduleResolution": "nodenext",
		"noImplicitAny": true,
		"paths": {
			"@lib": ["./src/lib/index"],
			"@controllers/*": ["./src/controllers/*"],
			"@schemas/*": ["./src/schemas/*"],
			"@services/*": ["./src/services/*"],
			"@types": ["./src/types/index"]
		}
	},
	"include": ["src/**/*"]
}
